---
export interface Props {
  highlight?: string;
}

const { highlight } = Astro.props;
---

<div class="flex items-start mb-3 last:mb-0">
  <div class="flex-shrink-0 w-6 h-6 mr-2 text-emerald-500">
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
      <polyline points="22 4 12 14.01 9 11.01"></polyline>
    </svg>
  </div>
  <div class="text-sm">
    <span class="font-medium text-emerald-600 dark:text-emerald-400">建议</span>
    {highlight && <span class="font-semibold"> {highlight}</span>}
    <slot />
  </div>
</div>