---
const { title, className = "" } = Astro.props;
---


<div class={`p-4 border border-accent rounded-lg bg-gray-50 dark:border-gray-600 dark:bg-gray-800 ${className}`} role="alert">
  <div class="flex items-center">
    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="shrink-0 w-6 h-6 me-2 text-accent " aria-hidden="true">
      <path d="M10 2v8l3-3 3 3V2"/><path d="M4 19.5v-15A2.5 2.5 0 0 1 6.5 2H19a1 1 0 0 1 1 1v18a1 1 0 0 1-1 1H6.5a1 1 0 0 1 0-5H20"/>
    </svg>
    
    <span class="sr-only">Info</span>
    <strong class="text-xl font-bold font-alibaba-puhuiti text-gray-800 dark:text-gray-300">{title}</strong>
  </div>
  <div class="mt-2 mb-4 text-sm text-foreground">
    <slot />
  </div>
</div>